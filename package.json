{
  "name": "shy-vue-template",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "description": "Template for vue3",
  "author": "shy1118",
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "dev": "vite --port 5433 --host",
    "preview": "vite preview",
    "format": "eslint --fix .",
    "lint": "eslint .",
    "test": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "up": "taze major -I",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@vueuse/core": "^13.6.0",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@iconify-json/carbon": "^1.2.13",
    "@types/node": "24.2.1",
    "@unocss/eslint-plugin": "^66.4.2",
    "@unocss/reset": "^66.4.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.0.1",
    "@vue/runtime-core": "^3.5.18",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.33.0",
    "eslint-plugin-format": "^1.0.1",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "pnpm": "^10.14.0",
    "simple-git-hooks": "^2.13.1",
    "taze": "^19.1.0",
    "typescript": "^5.9.2",
    "unocss": "^66.4.2",
    "unplugin-auto-import": "^20.0.0",
    "unplugin-vue-components": "^29.0.0",
    "unplugin-vue-router": "^0.15.0",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
