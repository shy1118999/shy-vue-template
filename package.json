{
  "name": "shy-vue-template",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "description": "Template for vue3",
  "author": "shy1118",
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "dev": "vite --port 5433",
