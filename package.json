{
  "name": "shy-vue-template",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.1",
  "description": "Template for vue3",
  "author": "shy1118",
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "dev": "vite --port 5433 --host",
    "preview": "vite preview",
    "format": "eslint --fix .",
    "lint": "eslint .",
    "test": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@vueuse/core": "^11.3.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.5.1",
    "@iconify-json/carbon": "^1.2.8",
    "@types/node": "20.2.1",
    "@unocss/eslint-plugin": "^66.0.0",
    "@unocss/reset": "^66.0.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "@vue/runtime-core": "^3.5.13",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.21.0",
    "jsdom": "^22.1.0",
    "lint-staged": "^15.4.3",
    "pnpm": "^9.15.6",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.8.2",
    "unocss": "^66.0.0",
    "unplugin-auto-import": "^19.1.1",
    "unplugin-vue-components": "^28.4.1",
    "vite": "^6.2.0",
    "vite-plugin-pages": "^0.32.5",
    "vitest": "^3.0.7",
    "vue-tsc": "^2.2.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
